        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="221" Width="400">
            <Label Content="Navegación entre ventanas" Height="50" VerticalContentAlignment="Center" Background="#FF4545C0"/>
            <TextBox Height="50" TextWrapping="Wrap" Text="Escribe algo personalizado"/>
            <Button x:Name="btSecundariaOcultar" Content="Secundaria y ocultar" Height="50" FontWeight="Bold" FontSize="18" Click="BtSecundariaOcultar_Click"/>
            <Button Content="Sevundaria y bloquear" Height="50" FontWeight="Bold" FontSize="18"/>

        </StackPanel>
    </Grid>
</Window>
