<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ejercicio5">

    <Style TargetType="{x:Type GroupBox}" x:Key="gb">
        <Setter Property="Foreground" Value="#FF1D00FF"/>
        <Setter Property="Background" Value="GreenYellow"/>
        <Setter Property="FontFamily" Value="Segoe UI Black"></Setter>
    </Style>


    <Style TargetType="{x:Type Label}" x:Key="lbRojo">
        <Setter Property="Foreground" Value="#FFE11526"></Setter>
        <Setter Property="FontFamily" Value="Sitka Small"></Setter>
    </Style>


    <Style TargetType="{x:Type Label}" x:Key="lbAzul">
        <Setter Property="Foreground" Value="#FF1D00FF"/>
        <Setter Property="FontFamily" Value="Sitka Small"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>
    
    
    <Style TargetType="{x:Type Label}" x:Key="lbVerde">
        <Setter Property="Foreground" Value="#FF5FB124"/>
        <Setter Property="FontFamily" Value="Sitka Small"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>
    
    
    <Style TargetType="{x:Type Button}" x:Key="btVerde">
        <Setter Property="Background" Value="#FF81EB91"/>
        <Setter Property="FontFamily" Value="Sitka Small"></Setter>
    </Style>
    
    
</ResourceDictionary>