        <Button x:Name="btMostrarLibros" Content="Mostrar Libros" HorizontalAlignment="Left" Margin="366,182,0,0" VerticalAlignment="Top" Width="121" Click="BtMostrarLibros_Click"/>
        <Label Content="Consulta Libros por Autor" HorizontalAlignment="Left" Margin="278,10,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>

    </Grid>
</Window>
